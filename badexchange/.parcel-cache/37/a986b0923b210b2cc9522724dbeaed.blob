body {
  font-family: "Muli", sans-serif;
  font-weight: 300;
}

input {
  padding: 9px 25px;
  border-radius: 5px;
  text-transform: uppercase;
}

#balance {
  border: 1px solid black;
  background-color: white;
  margin: 10px 0;
  padding: 5px 0;
}
#balance:before {
  content: "Balance:";
}

#top {
  width: 100%;
  text-align: center;
  height: 100%;
}

.wallet {
  background-color: #eee;
  margin: 20px;
  height: 100%;
  padding: 30px 50px;
  text-align: center;
  border-radius: 10px;
  width: 100% h1;
  width-margin: 0 0 20px;
}

.components {
  display: flex;
  flex-wrap: wrap;
}
.components > div {
  background-color: #eee;
  margin: 20px;
  padding: 30px 50px;
  text-align: center;
  border-radius: 10px;
}
.components > div h1 {
  margin: 0 0 20px;
}

.button {
  display: inline-block;
  font-weight: bold;
  text-transform: uppercase;
  border-radius: 5px;
  border: none;
  padding: 9px 25px;
  font-size: 0.7em;
  letter-spacing: 0.7px;
  background-color: #f58427;
}
.button:hover {
  cursor: pointer;
}