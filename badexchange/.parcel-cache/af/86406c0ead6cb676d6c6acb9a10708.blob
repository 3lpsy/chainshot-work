body {
  font-family: "Muli", sans-serif;
  font-weight: 300;
}

input {
  padding: 9px 25px;
  border-radius: 5px;
  text-transform: uppercase;
}

#wallet {
  width: 100%;
  display: block;
  flex: 0 0 100%;
  /* flex-grow, flex-shrink, flex-basis */
  border: 1px dashed black;
}

#signature {
  border: 1px solid black;
  background-color: white;
  margin: 10px 0;
  padding: 5px 0;
}
#signature:before {
  content: "Signature:";
}

#balance {
  border: 1px solid black;
  background-color: white;
  margin: 10px 0;
  padding: 5px 0;
}
#balance:before {
  content: "Balance:";
}

.components {
  display: flex;
  flex-wrap: wrap;
}
.components > div {
  background-color: #eee;
  margin: 20px;
  padding: 30px 50px;
  text-align: center;
  border-radius: 10px;
  flex: 1;
}
.components > div h1 {
  margin: 0 0 20px;
}

.button {
  display: inline-block;
  font-weight: bold;
  text-transform: uppercase;
  border-radius: 5px;
  border: none;
  padding: 9px 25px;
  font-size: 0.7em;
  letter-spacing: 0.7px;
  background-color: #f58427;
}
.button:hover {
  cursor: pointer;
}
